<AnchorPane prefHeight="393.0" prefWidth="430.0" style="-fx-background-color: darkblue;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.LoginController">
    <children>
        <ImageView fx:id="brandingImageView" fitHeight="458.0" fitWidth="454.0" layoutX="-3.0" layoutY="-74.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../gif1.gif" />
            </image>
            <cursor>
                <Cursor fx:constant="CROSSHAIR" />
            </cursor>
        </ImageView>
        <Pane blendMode="HARD_LIGHT" layoutX="-4.0" layoutY="34.0" opacity="0.92" prefHeight="360.0" prefWidth="456.0" style="-fx-background-color: white;">
            <children>
                <Label layoutX="140.0" layoutY="23.0" prefHeight="30.0" prefWidth="205.0" text="Login panel ">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label layoutX="62.0" layoutY="93.0" text="Username:">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
                <Label layoutX="64.0" layoutY="144.0" text="Password:" />
                <Button fx:id="logIn" layoutX="175.0" layoutY="255.0" mnemonicParsing="false" onAction="#logIn" prefHeight="38.0" prefWidth="131.0" text="Login" />
                <TextField fx:id="username" layoutX="190.0" layoutY="90.0" prefHeight="25.0" prefWidth="196.0" promptText="username" />
                <Text layoutX="108.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Not a member yet? " textAlignment="CENTER" />
                <Hyperlink fx:id="registerHyperlink" layoutX="263.0" layoutY="201.0" onAction="#registerLink" text="Register !" />
            <Label fx:id="wrongData" layoutX="200.0" layoutY="62.0" prefWidth="200.0" />
            <PasswordField fx:id="passwordField" layoutX="190.0" layoutY="140.0" prefHeight="25.0" prefWidth="196.0" promptText="password" />
            </children></Pane>
      <Button fx:id="close" layoutX="426.0" layoutY="4.0" mnemonicParsing="false" onAction="#closeOnAction" prefHeight="23.0" prefWidth="23.0" text="X" />
    </children>
</AnchorPane>
